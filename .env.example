# Faster APP 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 基础配置
PROJECT_NAME=Faster APP
VERSION=0.1.2
DEBUG=true

# Server 配置
HOST=0.0.0.0
PORT=8000

# API 配置
API_V1_STR=/api/v1

# JWT 配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
DB_URL=sqlite://db.sqlite

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=STRING
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
LOG_FILE_BACKUP_COUNT=10

# Lifespan 配置
# 数据库生命周期: 管理数据库连接的初始化和关闭
ENABLE_DATABASE_LIFESPAN=false
# 应用生命周期: 管理应用模块的启动和关闭
ENABLE_APPS_LIFESPAN=false
# 用户自定义生命周期: 启用从 config/lifespan.py 自动发现的自定义生命周期函数
ENABLE_USER_LIFESPANS=false

# 路由验证配置
VALIDATE_ROUTES=true

# 限流配置
# THROTTLE_RATES 为字典类型, 需要通过配置文件设置
# 默认值:
#   user: 100/hour
#   anon: 20/hour
#   default: 100/hour
