# 基础配置
PROJECT_NAME="Faster APP"
VERSION="0.0.1"
DEBUG=true
VALIDATE_ROUTES=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# JWT 配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
DB_URL=sqlite://db.sqlite

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=STRING
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
LOG_FILE_BACKUP_COUNT=10

# 生命周期配置
ENABLE_DATABASE_LIFESPAN=false
ENABLE_APPS_LIFESPAN=false
ENABLE_USER_LIFESPANS=false

# 限流配置
THROTTLE_RATES={"user":"100/hour","anon":"20/hour","default":"100/hour"}

# 中间件配置 - CORS
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
CORS_EXPOSE_HEADERS=[]
CORS_MAX_AGE=600

# 中间件配置 - TrustedHost
# ⚠️ 生产环境建议启用！
TRUSTED_HOST_ENABLED=false
TRUSTED_HOSTS=["*"]
# 生产环境示例:
# TRUSTED_HOST_ENABLED=true
# TRUSTED_HOSTS=["yourdomain.com","*.yourdomain.com"]

# 中间件配置 - GZip 压缩
GZIP_ENABLED=true
GZIP_MINIMUM_SIZE=1000

# ==================== 自定义中间件配置（可选）====================
# ⚠️ 自定义中间件默认不启用，以避免性能开销
# 如需使用，请参考 faster_app/middleware/builtins/custom.py
#
# 性能监控中间件（轻量级）:
# TIMING_ENABLED=true
# TIMING_SLOW_THRESHOLD=1.0
#
# 请求日志中间件（会增加 I/O 开销）:
# REQUEST_LOGGING_ENABLED=false
# REQUEST_LOGGING_LOG_BODY=false
# REQUEST_LOGGING_LOG_RESPONSE=false
# ==============================================================

# ==================== 生产环境配置检查清单 ====================
# 部署到生产环境前，请确保：
# ✓ DEBUG=false
# ✓ SECRET_KEY 已修改为强随机密钥
# ✓ CORS_ALLOW_ORIGINS 指定了具体的域名（不是 "*"）
# ✓ TRUSTED_HOST_ENABLED=true 并配置了具体主机名
