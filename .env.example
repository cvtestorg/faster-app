# Faster APP 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置值

# ============================================
# 基础配置
# ============================================
PROJECT_NAME=Faster APP
VERSION=0.1.2
DEBUG=true

# ============================================
# 服务器配置
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# API 配置
# ============================================
API_V1_STR=/api/v1

# ============================================
# JWT 配置
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# 数据库配置
# ============================================
DB_URL=sqlite://db.sqlite

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=STRING
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
LOG_FILE_BACKUP_COUNT=10

# ============================================
# 路由验证配置
# ============================================
VALIDATE_ROUTES=true

# ============================================
# Lifespan 生命周期配置 (v0.1.2 新增)
# ============================================
# 是否启用数据库生命周期管理 (默认: true)
# 设置为 false 可禁用数据库连接管理 (适用于无数据库的 API 服务)
ENABLE_DATABASE_LIFESPAN=true

# 是否启用应用生命周期管理 (默认: true)
# 设置为 false 可禁用应用启动/关闭生命周期 (如果不使用应用生命周期管理)
ENABLE_APPS_LIFESPAN=true

# 是否启用用户自定义生命周期 (默认: true)
# 设置为 false 可禁用从 config/lifespan.py 自动发现的用户自定义 lifespan
ENABLE_USER_LIFESPANS=true
