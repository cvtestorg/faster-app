# 基础配置
PROJECT_NAME="Faster APP"
VERSION="0.0.1"
DEBUG=true
VALIDATE_ROUTES=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# JWT 配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 数据库配置
DB_URL=sqlite://db.sqlite

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=STRING
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
LOG_FILE_BACKUP_COUNT=10

# 生命周期配置
ENABLE_DATABASE_LIFESPAN=false
ENABLE_APPS_LIFESPAN=false
ENABLE_USER_LIFESPANS=false

# 限流配置
THROTTLE_RATES={"user":"100/hour","anon":"20/hour","default":"100/hour"}

# CORS 配置
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
CORS_EXPOSE_HEADERS=[]
CORS_MAX_AGE=600

# 可信主机配置
TRUSTED_HOST_ENABLED=false
TRUSTED_HOSTS=["*"]

# 性能监控配置
TIMING_ENABLED=true
TIMING_SLOW_THRESHOLD=1.0

# 请求日志配置
REQUEST_LOGGING_ENABLED=true
REQUEST_LOGGING_LOG_BODY=false
REQUEST_LOGGING_LOG_RESPONSE=false

# GZip 压缩配置
GZIP_ENABLED=true
GZIP_MINIMUM_SIZE=1000
